<!DOCTYPE html>
<html lang="en">

  <head>
    <% include ./partials/head %>
  </head>

  <header>
    <% include ./partials/header %>
    <script type="text/javascript" src="../javascript/app.js"></script>
    <script type="text/javascript" src="../vendor/jquery-2.2.3.min.js"></script>
  </header>

<div class="outerbody">
  <div class="searchdiv">
    <form action="/search/result" method="POST">
      <div class="row">
      <fieldset class="large-2 columns">
        <select class="options" name="type">
          <option value="eat" id="eat" <% if('eat' == taskObjects.searchVals.taskType){ %> selected <%}%>>I want to eat at:</option>
          <option value="read" id="read"  <% if('read' == taskObjects.searchVals.taskType){ %> selected <%}%>>I want to read:</option>
          <option value="watch" id="watch" <% if('watch' == taskObjects.searchVals.taskType){ %> selected <%}%>>I want to watch:</option>
          <option value="buy" id="buy" <% if('buy' == taskObjects.searchVals.taskType){ %> selected <%}%>>I want to buy:</option>
        </select>
      </fieldset>
      <fieldset class="large-10 columns">
        <div class="searchbar">
          <input id="search" type="text" name="userinput" value='<%=taskObjects[key].searchVals.userInput%>'>
          <input id="submit" type="submit" value="Submit">
        </div>
      </fieldset>
      </div>
    </form>
  </div>
</div>
  <div class="row" id="todocontainer">
       <% for(key in taskObjects){ %>
      <div class="searchresults small-4 small-centered columns">
        <ul class="listcontainer">
          <div class="namecontainer <%=taskObjects[key].searchVals.type%> <%=taskObjects[key].searchVals.userInput%>">
            <h2><%=taskObjects[key].name%></h2>
            <input type="image" src="../images/check.png" id="read">
              <div class="togglecontainer">
                <li>
                  <div class="item-content">
                    <img src="<%=taskObjects[key].img%>"/>
                    <div class="synopsis" id="scrollContainer">
                      <%=taskObjects[key].desc%>
                    </div>
                    <p class="rating"><%=taskObjects[key].rating%></p>
                    <a href="www.facebook.com" id="url">View the trailer here</a>
                    <div class="buttons">
                      <p><a href="#" class="sidebuttons nextitem">Next <i class="fi-arrow-right"></i></a>
                    </div>
                  </div>
                </li>
              </div>
            </ul>
          </div>
          <% } %>
        </div>
      </div>
    </div>

</html>